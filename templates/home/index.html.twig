                {% for tag in tags %}
                    <option class="filter-value" value="{{ tag.id }}">{{ tag.title }}</option>
                {% endfor %}
            </select>
            with:
            <select name="with[]" multiple>
                <option class="filter-value" value="category">Categories</option>
