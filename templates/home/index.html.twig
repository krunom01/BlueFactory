{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    Filter by category:
    <form action="{{ path('getJsonResult')}}" method="GET">
        <select name="category">
            {% for category in categories %}
            <option value="{{ category.id }}">{{ category.title }}</option>
            {% endfor %}
        </select>
        <input type="submit" value="filter by category">
    </form>
</div>

    <div class="example-wrapper">
        Filter by tags:
        <form action="{{ path('getJsonResultbyTags')}}" method="GET" id="myform">
            <select name="tags[]" multiple>
                {% for tag in tags %}
                    <option class="filter-value" value="{{ tag.id }}">{{ tag.title }}</option>
                {% endfor %}
            </select>
            <input type="submit" value="filter by tags">
        </form>
    </div>

    <div class="example-wrapper">
        Filter by Language:
        <form action="{{ path('getJsonResultByLang')}}" method="GET">
            <select name="lang">
                {% for lang in languages %}
                    <option value="{{ lang.code }}">{{ lang.code }}</option>
                {% endfor %}
            </select>
            <input type="submit" value="filter by lang">
        </form>
    </div>
    <div class="example-wrapper">
        Get meals with:
        <form action="{{ path('getJsonResultWith')}}" method="GET" id="myform">
            <select name="with[]" multiple>
                <option class="filter-value" value="category">Categories</option>
                <option class="filter-value" value="tags">Tags</option>
                <option class="filter-value" value="ingredients">Ingredients</option>
            </select>
            <input type="submit" value="get maeals with">
        </form>
    </div>


